<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="14dp"
    android:gravity="center_vertical"
    android:background="@android:color/white"
    android:elevation="2dp">

    <ImageView
        android:id="@+id/ivAppIcon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginEnd="12dp"
        android:contentDescription="Icono de la aplicación" />

    <TextView
        android:id="@+id/tvAppName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="17sp"
        android:textColor="@color/purple_700"
        android:text="Nombre de la aplicación"
        android:gravity="center_vertical" />

    <Switch
        android:id="@+id/switchEnableApp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="false"
        android:thumbTint="@color/teal_700"
        android:trackTint="@color/teal_200"
        android:layout_marginStart="12dp"
        android:contentDescription="Habilitar o deshabilitar notificaciones de la app" />

</LinearLayout>